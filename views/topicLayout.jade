	body.bg-1
		// Preloader
		.mask
			#loader
		// /Preloader
		// Wrap all page content here
		#wrap
			// Make page fluid
			.row
				// Fixed navbar
				#navbar.navbar.navbar-default.navbar-fixed-top.navbar-transparent-black.mm-fixed-top(role='navigation')
					// Branding
					.navbar-header.col-md-2
						a.navbar-brand(href='/')
							strong CodeMastersPub
							|  v0.1.3
						.sidebar-collapse
							a(href='#')
								i.fa.fa-bars
					// Branding end
					// .nav-collapse
					.navbar-collapse
						// Page refresh
						ul.nav.navbar-nav.refresh
							li.divided
								a.page-refresh(href='#')
									i.fa.fa-refresh
						
						include ./partials/navbarSessionUSer
					
						ul#sidebar.nav.navbar-nav.side-nav
							li.collapsed-content
								ul
									li.search
										// Collapsed search pasting here at 768px
							li#navigation.navigation
								if user != undefined
									a(href='/post/newtopic' )
										//.sidebar-toggle(href='#', data-toggle='#navigation')
										| + Yeni Başlık Aç
										//i.fa.fa-angle-up
								ul.menu
									if topics !== undefined
										each topic in topics
											li
												a(href='/#{topic.idtopic}--#{topic.title}' )
													i.fa.fa-tachometer
													| #{topic.title}
